<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding
                android:bottom="1.5dp"
                android:left="0.2dp"
                android:right="0.2dp"
                android:top="0.5dp"></padding>
            <solid android:color="#02000000" />
            <corners android:radius="30dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="2dp"
                android:left="0.4dp"
                android:right="0.4dp"
                android:top="1.5dp" />
            <solid android:color="#05000000" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="2.5dp"
                android:left="0.6dp"
                android:right="0.6dp"
                android:top="2dp" />
            <solid android:color="#10000000" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="3dp"
                android:left="0.8dp"
                android:right="0.8dp" />
            <solid android:color="#15000000" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="#ffffff" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>