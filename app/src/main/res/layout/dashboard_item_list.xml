<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15sp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_card_view_bg"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/img_profile"
                android:fontFamily="@font/montserrat_regular"
                android:text="Irica Fernadice"
                android:textColor="@color/purple_700"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/img_profile"
                android:fontFamily="@font/montserrat_regular"
                android:text="26 Years"
                android:textSize="13sp" />

            <!--            <TextView-->
            <!--                android:id="@+id/txt_height"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_below="@+id/txt_age"-->
            <!--                android:layout_marginLeft="10dp"-->
            <!--                android:layout_marginTop="3dp"-->
            <!--                android:layout_toRightOf="@+id/img_profile"-->
            <!--                android:fontFamily="@font/montserrat_regular"-->
            <!--                android:text="5''"-->
            <!--                android:textSize="13sp" />-->

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_age"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/img_profile"
                android:fontFamily="@font/montserrat_regular"
                android:text="Kolhapur, Maharashtra"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_designation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_address"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/img_profile"
                android:fontFamily="@font/montserrat_regular"
                android:text="Senior software Developer"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_accept"
                android:layout_width="90dp"
                android:layout_height="26dp"
                android:layout_below="@+id/txt_designation"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img_profile"
                android:background="@drawable/placed"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:text="Accept"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_decline"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:layout_below="@+id/txt_designation"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/txt_accept"
                android:background="@drawable/decline"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:text="Decline"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profile"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher_background"
                app:civ_border_color="#FF000000"
                app:civ_border_width="1dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>